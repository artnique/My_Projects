@{
    string imageServerUrl = ConfigHelper.ImageServerUrl;

    Ad bannerImage = null;

    IList<Ad> banners = ViewBag.Banner as IList<Ad>;


    if (banners != null)
    {
        bannerImage = banners.First(x => x.AdNo == "yc_help_banner_image_1_1");
    }
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="renderer" content="webkit" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <title>@ViewBag.Title</title>    
    @Styles.Render("~/bundles/Stylescss")

    @Scripts.Render("~/bundles/Scriptslib")
    <script type="text/javascript" src="~/Scripts/lib/layer/layer.js"></script>

    @Scripts.Render("~/bundles/Scriptspage")
</head>
<body>
    @Html.Partial("_Header")
    <!-- 页面主体 开始-->
    <!-- 频道banner开始 -->
    <div class="pdbanner">
        <div class="divc w1000 tc c">
            <img src="@(imageServerUrl + bannerImage.ImgUrl)" alt="" />
        </div>
    </div>
    <!-- 频道banner结束 -->
    @Html.Partial("_Notice")
    <div class="divc w1000 pt15 clearfix aboutw">
        @Html.Partial("_PageMenu")
        @RenderBody()
    <div class="cl40"></div>
    </div>
    <!-- 页面主体 结束-->
        @Html.Partial("_Footer")
    </div></body>
</html>